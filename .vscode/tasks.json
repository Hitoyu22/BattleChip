{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compiler BattleChip",
      "type": "shell",
      "command": "C:/msys64/usr/bin/gcc.exe",
      "args": [
        "-I${workspaceFolder}/code/include",
        "${workspaceFolder}/code/src/game/game.c",
        "${workspaceFolder}/code/src/board/navire.c",
        "${workspaceFolder}/code/src/config/config.c",
        "-o",
        "${workspaceFolder}/executable/BattleChip.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Ex√©cuter BattleChip",
      "type": "shell",
      "command": "${workspaceFolder}/executable/BattleChip.exe",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "Compiler BattleChip"
    }
  ]
}
